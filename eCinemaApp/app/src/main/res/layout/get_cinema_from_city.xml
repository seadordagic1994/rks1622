<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get projections for certain cinema"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="@color/smoothBlack"/>

    <Spinner
        android:id="@+id/countries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/spinner_border"
        />

    <Spinner
        android:id="@+id/cities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tooltipText="Select country"
        android:layout_marginBottom="20dp"
        android:background="@drawable/spinner_border"/>

    <Spinner
        android:id="@+id/cinemas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tooltipText="Select country"
        android:layout_marginBottom="20dp"
        android:background="@drawable/spinner_border"/>

    <Button
        android:id="@+id/getProjectionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get projections"
        android:layout_gravity="right"
        android:background="@color/redButton"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp"
        android:textColor="#FFFF"/>


</LinearLayout>