<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayoutRate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:src="@drawable/ic_code_black_24dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/myImageView"
            android:layout_alignTop="@id/myImageView"
            android:layout_alignRight="@id/myImageView"
            android:layout_alignBottom="@id/myImageView"
            android:gravity="center"
            android:text="Hello"
            android:textColor="#e3ffffff"
            android:background="@color/blackOp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/textRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Rate movie:"
            android:layout_marginTop="15dp"
            android:layout_below="@id/myImageView"
            android:textColor="@color/redHighlighted"
            android:textStyle="bold"
            android:layout_alignStart="@id/myImageView"
            />



    </RelativeLayout>




</LinearLayout>