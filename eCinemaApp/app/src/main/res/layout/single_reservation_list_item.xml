<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/side_nav_bar_reservation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie name"
        android:id="@+id/movieName"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/smoothBlack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order date:"
        android:id="@+id/orderDateTxt"
        android:layout_below="@id/movieName"
        android:layout_marginBottom="5dp"
        android:textSize="12dp"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.05.2018"
        android:id="@+id/orderDate"
        android:layout_toRightOf="@id/orderDateTxt"
        android:layout_below="@id/movieName"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expire date:"
        android:id="@+id/expireDateTxt"
        android:layout_below="@id/orderDateTxt"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.05.2019"
        android:id="@+id/expireDate"
        android:layout_toRightOf="@id/expireDateTxt"
        android:layout_below="@id/orderDate"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket price:"
        android:id="@+id/ticketPriceTxt"
        android:layout_below="@id/expireDateTxt"
        android:layout_marginTop="21dp"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17.00 BAM"
        android:id="@+id/ticketPrice"
        android:layout_toRightOf="@id/ticketPriceTxt"
        android:layout_below="@id/expireDateTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/redHighlighted"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_code_black_24dp"
        android:id="@+id/code"/>



    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="description" />



</RelativeLayout>