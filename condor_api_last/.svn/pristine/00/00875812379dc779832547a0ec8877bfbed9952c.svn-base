<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CondorExtreme3_Xamarin.RegistrationPage">

    <ContentPage.Content>
        <ScrollView Padding="15, 0, 15, 15">
            <StackLayout Padding="15, 0, 0, 0" VerticalOptions="CenterAndExpand">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
  
                <Label Text="Registration" FontSize="30" HorizontalTextAlignment="Center" Grid.ColumnSpan ="2"/>

                <Label Text="First Name:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="1"/>
                <Entry x:Name="entryFirstName" Grid.Row="1" Grid.Column="1" Placeholder="John"/>
                <Label x:Name="FirstNameValidationMessage" Text="" Grid.Row="2" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Label Text="Last Name:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Entry x:Name="entryLastName" Grid.Row="3" Grid.Column="1" Placeholder="Smith"/>
                <Label x:Name="LastNameValidationMessage" Text="" Grid.Row="4" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible ="False"/>

                <Label Text="Email:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Entry x:Name="entryEmail" Grid.Row="5" Grid.Column="1" Placeholder="john@smith.com"/>
                <Label x:Name="EmailValidationMessage" Text="" Grid.Row="6" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Label Text="Phone Number:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Entry x:Name="entryPhoneNumber" Grid.Row="7" Grid.Column="1" Placeholder="38762012345"/>
                <Label x:Name="PhoneNumberValidationMessage" Text="" Grid.Row="8" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Label Text="City:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Picker x:Name="pickerCity" Grid.Row="9" Grid.Column="1"/>
                <Label x:Name="CityValidationMessage" Text="" Grid.Row="10" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Label Text="Username:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Entry x:Name="entryUsername" Grid.Row="11" Grid.Column="1" Placeholder="johnny"/>
                <Label x:Name="UsernameValidationMessage" Text="" Grid.Row="12" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Label Text="Password:" VerticalTextAlignment="Center" FontSize="18" Grid.Row="2"/>
                <Entry x:Name="entryPassword" Grid.Row="13" Grid.Column="1" Placeholder="********" IsPassword="True"/>
                <Label x:Name="PasswordValidationMessage" Text="" Grid.Row="14" HorizontalTextAlignment="Start" FontSize="18" TextColor="Red" IsVisible="False"/>

                <Button x:Name="buttonRegister" Grid.Row="8" Grid.Column="1" Clicked="buttonRegister_Clicked" Text="Register"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>