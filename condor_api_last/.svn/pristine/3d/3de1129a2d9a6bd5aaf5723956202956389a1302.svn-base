<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CondorExtreme3_Xamarin.RVMenuPage">
    <ContentPage.Content>
    
        <StackLayout Padding="15,15,15,15">
            <Label x:Name="labelBalance" Text="Balance: 0 VP"
                HorizontalOptions="CenterAndExpand" FontSize="30" />
            <Button x:Name="buttonProjections" Text="Projections" Margin="0, 45, 0, 0" Clicked="buttonProjections_Clicked"/>
            <Button x:Name="buttonBuyVP" Text="Buy VP" Clicked="buttonBuyVP_Clicked"/>
            <Button x:Name ="buttonReservations" Text="Reservations" Clicked="buttonReservations_Clicked"/>
            <Button x:Name ="buttonRateMovies" Text="Rate Movies" Clicked="buttonRateMovies_Clicked"/>
            <Button x:Name ="buttonSignOut" Text="Sign Out" Clicked="buttonSignOut_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>